{{#sprite}}
{{class}},
%{{#options}}{{cssClass}}{{/options}} {
  background-image: resolve('{{{escaped_image}}}');
  background-repeat: no-repeat;
}

{{class}},
%{{#options}}{{cssClass}}{{/options}} {
  {{#items}}
  &.{{name}} {
    width: {{px.width}};
    height: {{px.height}};

    background-position: {{px.offset_x}} {{px.offset_y}}
  }
  {{/items}}
}
{{/sprite}}

{{#retina}}
@include retina() {
  {{class}},
  %{{#options}}{{cssClass}}{{/options}} {
    background-image: resolve('{{{escaped_image}}}');
    background-size: {{px.total_width}} {{px.total_height}};
  }
}
{{/retina}}
